{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "create directory",
			"command": "mkdir -p ${workspaceFolder}/build/${relativeFileDirname}"
		},
		{
			"type": "shell",
			"label": "build test",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++14",
				"-pthread",
                "-g",
                "-I${workspaceFolder}/util",
				"-o", "${workspaceFolder}/build/${relativeFileDirname}/test",
				"${fileDirname}/test.cpp",
				"${workspaceFolder}/util/utest.cpp",
				"${workspaceFolder}/util/util.cpp",
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
            "group": "build",
			"dependsOn": "create directory"
		},
		{
			"type": "shell",
			"label": "build main",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++14",
				"-pthread",
                "-g",
				"${fileDirname}/main.cpp",
                "-o",
                "${workspaceFolder}/build/${relativeFileDirname}/main",
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
            "group": "build",
			"dependsOn": "create directory"
		}
	]
}
